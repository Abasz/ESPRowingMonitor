	"version": "2.0.0",
	"tasks": [
		{
			"label": "Compile with g++",
			"type": "shell",
			"command": "g++ -g -O3 -std=c++17 test/*.cpp src/rower/*.cpp src/utils/regressor.service.cpp -o testRun -D PI=3.1415926535897932384626433832795 -D INPUT_PULLUP=1 -include stdint.h -include string -include cmath -include Esp32-typedefs.h -Itest -Isrc -D ROWING_SIMULATION",
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Run test",
			"type": "shell",
			"command": "testRun > output.txt",
			"dependsOn": [
				"Compile with g++"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			}
		}
	]
}