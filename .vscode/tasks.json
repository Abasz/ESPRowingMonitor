{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "e2e test",
			"command": "mingw32-make",
			"args": [
				"e2e",
				"--trace"
			],
			"problemMatcher": [
				"$gcc"
			],
			"options": {
				"cwd": "${cwd}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: mingw32-make"
		},
		{
			"type": "cppbuild",
			"label": "catch test file",
			"command": "mingw32-make",
			"args": [
				"test",
				"TEST_SRC=${file}",
				"--trace"
			],
			"options": {
				"cwd": "${cwd}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "test",
				"isDefault": false
			},
			"detail": "compiler: mingw32-make"
		},
		{
			"type": "cppbuild",
			"label": "catch test all",
			"command": "mingw32-make",
			"args": [
				"test",
				"TEST_SRC=test/unit/*.spec.cpp",
				"--trace"
			],
			"options": {
				"cwd": "${cwd}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"detail": "compiler: mingw32-make"
		}
	]
}